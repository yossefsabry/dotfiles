#!/bin/bash

# Check for screenkey-git
if ! command -v screenkey &> /dev/null; then
    echo "Installing screenkey-git from AUR..."
    yay -S --noconfirm screenkey-git
fi

# Kill existing instances
pkill screenkey &>/dev/null

screenkey \
    -s large \
    -p fixed \
    -g 600x80-30-85 \
    --font-color white \
    --bg-color black \
    --opacity 0.7 
