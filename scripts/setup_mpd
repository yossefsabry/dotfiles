#!/usr/bin/env bash

# Check if MPD service is active
if systemctl --user is-active --quiet mpd.service; then
    echo "MPD is already running! âœ…"
else
    echo "MPD is not running. Starting it now..."
    systemctl --user enable mpd.service
    systemctl --user start mpd.service
    echo "MPD started and enabled! ðŸš€"
fi

# Optional: Force an MPD database update
mpc update && echo "MPD database updated! ðŸ”„"

# Show current MPD status
mpc status

